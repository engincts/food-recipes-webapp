@model YemekTarifleri.Models.UserLoginModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>

    <style>
        .form-container {
            max-width: 500px;
            margin: auto;
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="container form-container">
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["error"]
            </div>
        }
        <form action="Login" method="post" class="form-signin">
            <figure> <img class="mb-4 bg-white " src="https://w7.pngwing.com/pngs/167/744/png-transparent-restaurant-chef-s-uniform-eating-chef-icon-thumbnail.png" alt="" width="72" height="72"></figure>
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <p>Please fill in this form to sign in.</p>
            <hr />
            <div class="form-group">
                <label for="userName"><b>User Name</b></label>
                <input type="text" id="userName" name="userName" class="form-control" value="@Model.UserName" placeholder="User Name" required autofocus>
            </div>
            <div class="form-group">
                <label for="password"><b>Password</b></label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="remember" name="RememberMe">
                <label class="form-check-label" for="remember">Remember me</label>
            </div>
            <div class="clearfix">
                <button type="submit" style="height:38px;width:80px" class="btn btn-primary btn-block">Sign in</button>
            </div>
        </form>
        <form action="CreateUser" method="get">
            <div class="clearfix mt-2">
                <button type="submit" style="height:38px;width:80px" class="btn btn-secondary btn-block">Sign up</button>
            </div>
        </form>
    </div>
</body>
</html>
